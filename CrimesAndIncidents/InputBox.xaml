<Window x:Class="CrimesAndIncidents.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputBox" Height="100" Width="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox Name="txtBox" Margin="10,10,10,0" Text="" VerticalAlignment="Top" Grid.ColumnSpan="2" />
        <Button Name="btnCancel" Content="Отмена" Margin="10,37,5,0" VerticalAlignment="Top" Click="btnCancel_Click" />
        <Button Name="btnOk" Content="Ok" Grid.Column="1" Margin="5,37,10,0" VerticalAlignment="Top" Click="btnOk_Click" />

    </Grid>
</Window>
