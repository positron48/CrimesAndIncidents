<Window x:Class="CrimesAndIncidents.PleaseWait"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PleaseWait" Height="130" Width="350" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
        <Grid.Effect>
            <DropShadowEffect Color="#FF080808" ShadowDepth="0" BlurRadius="15" Direction="0"/>
        </Grid.Effect>
        <Label Content="Пожалуйста, подождите..." HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="CyrillicOld" FontSize="24"/>

    </Grid>
</Window>
