<Window x:Class="CrimesAndIncidents.AddRank"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление звания" Height="200" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="155"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Заполните поля:" Margin="10,10,10,10" VerticalAlignment="Top" Grid.ColumnSpan="2" HorizontalAlignment="Center" />
        <Label Content="Полное наименование" Margin="10,40,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Сокращенно" Margin="10,70,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Приоритет" Margin="10,100,0,0" VerticalAlignment="Top"/>

        <TextBox Name="txFullName" Margin="10,40,10,0" VerticalAlignment="Top" Grid.Column="2"/>
        <TextBox Name="txShortName" Margin="10,70,10,0" VerticalAlignment="Top" Grid.Column="2"/>
        <TextBox Name="txPriority" Margin="10,100,10,0" VerticalAlignment="Top" Grid.Column="2"/>

        <Button Content="Ok" Margin="10,10,10,10" Name="btnAddClause" Grid.Column="2" VerticalAlignment="Bottom" Click="btnAddClause_Click" />

    </Grid>
</Window>
