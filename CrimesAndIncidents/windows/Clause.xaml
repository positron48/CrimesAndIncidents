<Window x:Class="CrimesAndIncidents.AddClause"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление статьи УК РФ" Height="230" Width="250" Icon="../icon.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Заполните поля:" Margin="10,10,10,10" VerticalAlignment="Top" Grid.ColumnSpan="2" HorizontalAlignment="Center" />
        <Label Content="пункт" Margin="10,130,0,0" VerticalAlignment="Top"/>
        <Label Content="часть" Margin="10,100,0,0" VerticalAlignment="Top"/>
        <Label Content="статья" Margin="10,70,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="описание" Margin="10,40,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

        <TextBox Name="txDescription" Margin="10,40,10,0" VerticalAlignment="Top" Grid.Column="2"/>
        <TextBox Name="txNumber" Margin="10,70,10,0" VerticalAlignment="Top" Grid.Column="2"/>
        <TextBox Name="txPart" Margin="10,100,10,0" VerticalAlignment="Top" Grid.Column="2"/>        
        <TextBox Name="txPoint" Margin="10,130,10,0" VerticalAlignment="Top" Grid.Column="2"/>
        
        

        <Button Content="Ok" Margin="10,10,10,10" Name="btnAddClause" Grid.Column="2" VerticalAlignment="Bottom" Click="btnAddClause_Click" />

    </Grid>
</Window>
